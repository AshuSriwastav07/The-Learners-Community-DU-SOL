<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background shape with rounded corners -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/black"/> <!-- Set the background color -->
            <corners android:radius="7dp"/> <!-- Apply corner radius to all corners -->
        </shape>
    </item>

    <!-- Bottom border shape -->
    <item android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/> <!-- Set bottom border color -->
        </shape>
    </item>

</layer-list>
