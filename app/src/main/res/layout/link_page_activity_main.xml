<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color_night"
    tools:context="com.dusol.thelearnerscommunity.LinkPage_MainActivity"
    tools:ignore="UsingOnClickInXml">


    <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/bottomNavBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_3"
            android:fontFamily="@font/nunito_extrabold"
            android:text="@string/bannertext"
            android:textAlignment="center"
            android:textColor="#C51162"
            android:textSize="@dimen/dp_10"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/LinkPageMarquee"
            style="@style/banner_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alata"
            android:singleLine="true"
            android:text=""
            android:textAlignment="center"
            android:textSize="@dimen/dp_7"
            android:textStyle="bold"
            android:shadowColor="#F0D987"
            android:shadowDx="0.0"
            android:shadowDy="0.0"
            android:shadowRadius="5"/>

        <ScrollView
            android:id="@+id/scrollView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="5dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/button1_du_sol_notes_page"
                            style="@style/basic_button"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_42"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:backgroundTint="#054bb4"
                            android:drawableTop="@mipmap/img"
                            android:fontFamily="@font/alata"
                            android:gravity="center"
                            android:text="@string/DU_SOL_NOTES"
                            android:textAlignment="center"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textSize="@dimen/dp_5"
                            android:typeface="normal"
                            app:cornerRadius="30dp"
                            app:rippleColor="#EDE8E8"
                            app:strokeColor="#686767"
                            tools:ignore="TextSizeCheck" />

                        <ImageView
                            android:id="@+id/newNotesUpload"
                            android:layout_width="@dimen/dp_15"
                            android:layout_height="@dimen/dp_15"
                            android:layout_gravity="right"
                            android:layout_margin="18dp"
                            android:visibility="gone" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/button10_SOL_Study_Material"
                            style="@style/basic_button"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_42"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:backgroundTint="#054bb4"
                            android:drawableTop="@mipmap/materials"
                            android:fontFamily="@font/alata"
                            android:gravity="center"
                            android:text="@string/sol_materials"
                            android:textAlignment="center"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textSize="@dimen/dp_5"
                            android:typeface="normal"
                            app:cornerRadius="30dp"
                            app:rippleColor="#EDE8E8"
                            tools:ignore="TextSizeCheck" />

                        <ImageView
                            android:id="@+id/newStudyMaterialUpload"
                            android:layout_width="@dimen/dp_15"
                            android:layout_height="@dimen/dp_15"
                            android:layout_gravity="right"
                            android:layout_margin="18dp"
                            android:visibility="gone" />

                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/button2_SOL_Updates"
                            style="@style/basic_button"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_42"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:backgroundTint="#054bb4"
                            android:drawableTop="@mipmap/notice"
                            android:fontFamily="@font/alata"
                            android:gravity="center"
                            android:text="@string/collage_updates"
                            android:textAlignment="center"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textSize="@dimen/dp_5"
                            android:typeface="normal"
                            app:cornerRadius="30dp"
                            app:rippleColor="#EDE8E8"
                            tools:ignore="TextSizeCheck" />

                        <ImageView
                            android:id="@+id/newCollageUpdate"
                            android:layout_width="@dimen/dp_15"
                            android:layout_height="@dimen/dp_15"
                            android:layout_gravity="right"
                            android:layout_margin="18dp"
                            android:visibility="gone" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/button3_QP"
                            style="@style/basic_button"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_42"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:backgroundTint="#054bb4"
                            android:drawableTop="@mipmap/exam"
                            android:fontFamily="@font/alata"
                            android:gravity="center"
                            android:text="@string/previous_question_papers"
                            android:textAlignment="center"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textSize="@dimen/dp_5"
                            android:typeface="normal"
                            app:cornerRadius="30dp"
                            app:rippleColor="#EDE8E8"
                            tools:ignore="TextSizeCheck" />

                        <ImageView
                            android:id="@+id/newQPUpload"
                            android:layout_width="@dimen/dp_15"
                            android:layout_height="@dimen/dp_15"
                            android:layout_gravity="right"
                            android:layout_margin="18dp"
                            android:visibility="gone" />

                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/button4_SOL_Syllabus"
                            style="@style/basic_button"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_42"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:backgroundTint="#054bb4"
                            android:drawableTop="@mipmap/list"
                            android:fontFamily="@font/alata"
                            android:gravity="center"
                            android:text="@string/sol_syllabus"
                            android:textAlignment="center"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textSize="@dimen/dp_5"
                            android:typeface="normal"
                            app:cornerRadius="30dp"
                            app:rippleColor="#EDE8E8"
                            tools:ignore="TextSizeCheck" />

                        <ImageView
                            android:id="@+id/newSyllabusUpload"
                            android:layout_width="@dimen/dp_15"
                            android:layout_height="@dimen/dp_15"
                            android:layout_gravity="right"
                            android:layout_margin="18dp"
                            android:visibility="gone" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/button5_Portal3"
                            style="@style/basic_button"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_42"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:backgroundTint="#054bb4"
                            android:drawableTop="@mipmap/student"
                            android:fontFamily="@font/alata"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="@string/studentPortal"
                            android:textAlignment="center"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textSize="@dimen/dp_5"
                            android:typeface="normal"
                            app:cornerRadius="30dp"
                            app:rippleColor="#EDE8E8"
                            tools:ignore="TextSizeCheck" />

                        <ImageView
                            android:id="@+id/newInfoUpload"
                            android:layout_width="@dimen/dp_15"
                            android:layout_height="@dimen/dp_15"
                            android:layout_gravity="right"
                            android:layout_margin="18dp"
                            android:visibility="gone" />

                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/button6_notes_store"
                            style="@style/basic_button"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_42"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:backgroundTint="#054bb4"
                            android:drawableTop="@mipmap/shop"
                            android:fontFamily="@font/alata"
                            android:gravity="center"
                            android:text="@string/paid_notes_store"
                            android:textAlignment="center"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textSize="@dimen/dp_5"
                            android:typeface="normal"
                            app:cornerRadius="30dp"
                            app:rippleColor="#EDE8E8"
                            tools:ignore="TextSizeCheck" />

                        <ImageView
                            android:id="@+id/newPaidNotesUpload"
                            android:layout_width="@dimen/dp_15"
                            android:layout_height="@dimen/dp_15"
                            android:layout_gravity="right"
                            android:layout_margin="18dp"
                            android:visibility="gone" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/button7_Videos"
                            style="@style/basic_button"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_42"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:backgroundTint="#054bb4"
                            android:drawableTop="@mipmap/play"
                            android:fontFamily="@font/alata"
                            android:gravity="center"
                            android:text="@string/video_notes"
                            android:textAlignment="center"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textSize="@dimen/dp_5"
                            android:typeface="normal"
                            app:cornerRadius="30dp"
                            app:rippleColor="#C8C4C4"
                            tools:ignore="TextSizeCheck" />

                        <ImageView
                            android:id="@+id/newVideoNotesUpload"
                            android:layout_width="@dimen/dp_15"
                            android:layout_height="@dimen/dp_15"
                            android:layout_gravity="right"
                            android:layout_margin="18dp"
                            android:visibility="gone" />

                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button9_connect_us"
                        style="@style/basic_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:backgroundTint="#054bb4"
                        android:drawableLeft="@mipmap/links"
                        android:fontFamily="@font/alata"
                        android:gravity="center"
                        android:text="@string/connect"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="@dimen/dp_6"
                        android:typeface="normal"
                        app:cornerRadius="15dp"
                        app:rippleColor="#EDE8E8"
                        tools:ignore="TextSizeCheck" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView11"
                    style="@style/banner_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="0dp"
                    android:paddingBottom="5dp"
                    android:text="@string/policy"
                    android:textAlignment="center"
                    android:textSize="@dimen/dp_7"
                    android:textStyle="bold"
                    android:visibility="gone" />


            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <ImageButton
        android:id="@+id/askHere"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:contentDescription="ask here"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.981"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/ask" />

    <LinearLayout
        android:id="@+id/bottomNavBar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/navbarHome"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_marginStart="15sp"
            android:layout_weight="1"
            android:backgroundTint="@color/background_color_night"
            android:contentDescription="@string/NavBTN"
            app:srcCompat="@mipmap/navhome" />

        <ImageButton
            android:id="@+id/navbarVideos"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_weight="1"
            android:backgroundTint="@color/background_color_night"
            android:contentDescription="@string/NavBTN"
            app:srcCompat="@mipmap/navvideo" />

        <ImageButton
            android:id="@+id/navbarBooks"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_weight="1"
            android:backgroundTint="@color/background_color_night"
            android:contentDescription="@string/NavBTN"
            app:srcCompat="@mipmap/navnotes" />

        <ImageButton
            android:id="@+id/navbarStudent"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_marginEnd="15sp"
            android:layout_weight="1"
            android:backgroundTint="@color/background_color_night"
            android:contentDescription="@string/NavBTN"
            app:srcCompat="@mipmap/navstudent" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>