<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    style="@style/night_page"
    android:layout_height="wrap_content"
    android:background="@color/background_color_night"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/borderset"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            style="@style/night_CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="8dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

            <ImageView
                android:id="@+id/notesImageView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_120"
                android:padding="8dp" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/notesSubjectName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_6"
            android:layout_marginEnd="@dimen/dp_6"
            android:fontFamily="sans-serif"
            android:textColor="@color/banners"
            android:textSize="@dimen/dp_7"
            android:textStyle="bold" />

        <Button
            android:id="@+id/openNotesLink"
            style="@style/sell_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15sp"
            android:backgroundTint="#3D8048"
            android:gravity="center"
            android:text="@string/check_details"
            android:textSize="@dimen/dp_8" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>