<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NEP_Files.NEP_HomePage"
    style="@style/night_page">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:fontFamily="@font/nunito_extrabold"
            android:gravity="center"
            android:text="@string/select_Your_Nep_Semester"
            android:textColor="#0037FF"
            android:textSize="@dimen/dp_10"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_margin="@dimen/dp_3"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="@dimen/dp_8"
            app:cardElevation="@dimen/dp_3" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/NEP_Sem1"
                    style="@style/nightHomePageButtons"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/dp_5"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/dp_4"
                    app:cardElevation="@dimen/dp_6">


                    <TextView
                        style="@style/nightHomePageButtons"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/dp_4"
                        android:fontFamily="@font/lato_bold"
                        android:gravity="center"
                        android:text="@string/semester_1"
                        android:textSize="@dimen/dp_5"
                        app:drawableTopCompat="@mipmap/mynotes" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/NEP_Sem2"
                    style="@style/nightHomePageButtons"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/dp_5"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/dp_4"
                    app:cardElevation="@dimen/dp_6">


                    <TextView
                        style="@style/nightHomePageButtons"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/dp_4"
                        android:fontFamily="@font/lato_bold"
                        android:gravity="center"
                        android:text="@string/semester_2"
                        android:textSize="@dimen/dp_5"
                        app:drawableTopCompat="@mipmap/mynotes" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_margin="@dimen/dp_3"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="@dimen/dp_8"
            app:cardElevation="@dimen/dp_3" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/NEP_Sem3"
                    style="@style/nightHomePageButtons"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/dp_5"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/dp_4"
                    app:cardElevation="@dimen/dp_6">


                    <TextView
                        style="@style/nightHomePageButtons"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/dp_4"
                        android:fontFamily="@font/lato_bold"
                        android:gravity="center"
                        android:text="@string/semester_3"
                        android:textSize="@dimen/dp_5"
                        app:drawableTopCompat="@mipmap/mynotes" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/NEP_Sem4"
                    style="@style/nightHomePageButtons"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/dp_5"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/dp_4"
                    app:cardElevation="@dimen/dp_6">


                    <TextView
                        style="@style/nightHomePageButtons"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/dp_4"
                        android:fontFamily="@font/lato_bold"
                        android:gravity="center"
                        android:text="@string/semester_4"
                        android:textSize="@dimen/dp_5"
                        app:drawableTopCompat="@mipmap/mynotes" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_margin="@dimen/dp_3"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="@dimen/dp_8"
            app:cardElevation="@dimen/dp_3" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/NEP_Sem5"
                    style="@style/nightHomePageButtons"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/dp_5"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/dp_4"
                    app:cardElevation="@dimen/dp_6">


                    <TextView
                        style="@style/nightHomePageButtons"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/dp_4"
                        android:fontFamily="@font/lato_bold"
                        android:gravity="center"
                        android:text="@string/semester_5"
                        android:textSize="@dimen/dp_5"
                        app:drawableTopCompat="@mipmap/mynotes" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/NEP_Sem6"
                    style="@style/nightHomePageButtons"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/dp_5"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/dp_4"
                    app:cardElevation="@dimen/dp_6">


                    <TextView
                        style="@style/nightHomePageButtons"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/dp_4"
                        android:fontFamily="@font/lato_bold"
                        android:gravity="center"
                        android:text="@string/semester_6"
                        android:textSize="@dimen/dp_5"
                        app:drawableTopCompat="@mipmap/mynotes" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/Buy_Notes_PDF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="32dp"
            android:layout_marginRight="20sp"
            android:layout_marginBottom="10sp"
            android:backgroundTint="#1E88E5"
            android:drawableLeft="@mipmap/buy"
            android:padding="12dp"
            android:text="@string/get_premium_notes"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>